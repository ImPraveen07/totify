{
  "id": "app.totify",
  "name": "Totify",
  "short_name": "Totify",
  "description": "Totify understands that not everyone can pay big amounts just to hear the songs they love. It begins free, stays affordable, and always puts listeners first.",
  "lang": "en-IN",
  "start_url": "./",
  "scope": "/",
  "display": "standalone",
  "orientation": "portrait",
  "background_color": "#121212",
  "theme_color": "#1db954",
  "dir": "ltr",
  "categories": ["music", "entertainment", "audio"],
  "prefer_related_applications": false,

  "icons": [
    {
      "src": "/s192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "/s512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "/n512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "monochrome"
    }
  ],

  "screenshots": [
    {
      "src": "/screen1.png",
      "sizes": "1080x2400",
      "type": "image/png",
      "label": "Totify Home Page",
      "form_factor": "narrow"
    },
    {
      "src": "/screen2.png",
      "sizes": "1080x2400",
      "type": "image/png",
      "label": "Music Player Screen",
      "form_factor": "narrow"
    }
  ],

  "shortcuts": [
    {
      "name": "Open Player",
      "short_name": "Player",
      "description": "Jump directly to the currently playing song.",
      "url": "/player",
      "icons": [
        {
          "src": "/s192.png",
          "sizes": "192x192",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Your Library",
      "short_name": "Library",
      "description": "Quick access to your saved songs and playlists.",
      "url": "/library",
      "icons": [
        {
          "src": "/s192.png",
          "sizes": "192x192",
          "type": "image/png"
        }
      ]
    }
  ],

  "related_applications": [
    {
      "platform": "webapp",
      "url": "https://totify.netlify.app/manifest.json"
    }
  ],

  "file_handlers": [
    {
      "action": "/upload",
      "accept": {
        "audio/mpeg": [".mp3"],
        "audio/wav": [".wav"]
      }
    }
  ]
}
